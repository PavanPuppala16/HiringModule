@using HiringOperation.Models;
@model MailModel
@{
    ViewData["Title"] = "SendingMail";
    Layout = "~/Views/Shared/_TrainersLayout.cshtml";
}

<fieldset>
    <legend>
        Send Email
    </legend>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary()
        <p>From: </p>
        <p>@Html.TextBoxFor(m=>m.From)</p>
        <p>To: </p>
        <p>@Html.TextBoxFor(m=>m.To)</p>
        <p>Subject: </p>
        <p>@Html.TextBoxFor(m=>m.Subject)</p>
        <p>Body: </p>
        <p>@Html.TextAreaFor(m=>m.Body)</p>
        @Html.ActionLink("Home","Index","ATSProject")
        <input type="submit" value="Send" />
       
        
    }
</fieldset>


