@using HiringOperation.Models;
@model HiringSTD
@{
    ViewData["Title"] = "ManageSTD";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<html>
<head>
    <link href="Styles/JobStyle.css" type="text/css" rel="Stylesheet" />
    <link href="Styles/gridstyles.css" rel="Stylesheet" type="text/css" />
    <link href="Styles/Calendar.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="ndate/datetimepicker_css.js"></script>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" />
    <style type="text/css">
        #calendarContainerOverride table {
            width: 0px;
            height: 0px;
        }

            #calendarContainerOverride table tr td {
                padding: 0;
                margin: 0;
            }

        #success_message {
            display: none;
        }

        section.py-5 {
            padding: 48px 0 !important;
        }
    </style>

    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" />

</head>

<body>
    <section class="text-black">
        <div class="container-fluid">
            <div class="grid-container">
                <div class="row">
                    <div class="caption col-sm-5">
                        <h4 class="page-title font-weight-bold">ADMIN ADDING STUDENT</h4>
                    </div>
                </div>
                <hr />
                <div id="formgrid" class="formgrid">
                    <div>

                        <div class="row">
                            <div class="caption col-sm-6">

								@using (Html.BeginForm("ManageSTD", "ATSProject", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                        
                            @Html.AntiForgeryToken()
<div class="container">
	<br />
	<div class="panel panel-default">

		<div class="panel-heading"><b>Student Registration Form</b></div>
		<div class="panel-body ">

			<fieldset class="col-md-6" color="blue">
				<legend>Generic info</legend>

				<div class="panel panel-default">
					<div class="panel-body">

							<div class="col-sm-12">
								<div class="row">
									<div class="col-sm-6 form-group">
										<label> Hallticket_no<span class="text-danger">*</span></label>
										@Html.TextBoxFor(model => model.Hall_ticket_no, new { @class = "form-control", placeholder="Enter Hallticket Number" })
										@Html.ValidationMessageFor(model => model.Hall_ticket_no, "", new { @class = "text-danger" })
									</div>
									<div class="col-sm-6 form-group">
																		<label>Student Name<span class="text-danger">*</span></label>
										@Html.TextBoxFor(model => model.Name_of_the_student, new { @class = "form-control", placeholder="Enter student Name" })
						       		@Html.ValidationMessageFor(model => model.Name_of_the_student, "", new { @class = "text-danger" })
									</div>
								</div>
								<div class="row">
									<div class="col-sm-6 form-group">
																		<label>Email Id<span class="text-danger">*</span></label>
										@Html.TextBoxFor(model => model.Emailid, new { @class = "form-control", placeholder="Enter EmailID " })
							    @Html.ValidationMessageFor(model => model.Emailid, "", new { @class = "text-danger" })
									</div>
									<div class="col-sm-6 form-group">
																		<label>Date of birth<span class="text-danger">*</span></label>
										@Html.EditorFor(model => model.Dob, new { @class = "form-control", placeholder="Enter DOB " })
										@Html.ValidationMessageFor(model => model.Dob, "", new { @class = "text-danger" })
									</div>
								</div>
								<div class="form-group">
																	<label>Gender <span class="text-danger">*</span></label>
									@Html.RadioButtonFor(model => model.Gender, "Male", new { id = "male-true"  })
									@Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
									@Html.Label("male-true", "Male")
									@Html.RadioButtonFor(model => model.Gender, "Female", new { id = "female-true"})
									@Html.Label("female-true", "Female")

								</div>

	                            <div class="col-sm-6 form-group">
																	<label>Mobile number<span class="text-danger">*</span></label>
								@Html.TextBoxFor(model => model.PH_No, new { @class = "form-control", placeholder="Enter Mobile number " })
																	@Html.ValidationMessageFor(model => model.PH_No, "", new { @class = "text-danger" })
																</div>
								<div class="col-sm-6 form-group">
																	<label>Adhar<span class="text-danger">*</span></label>
									@Html.TextBoxFor(model => model.Aadhar_no, new { @class = "form-control", placeholder="Enter Adhar number " })
																	@Html.ValidationMessageFor(model => model.Aadhar_no, "", new { @class = "text-danger" })
								</div>


							</div>

					</div>
				</div>

			</fieldset>
			<fieldset class="col-md-6">
				<legend>Schooling </legend>
				<div class="panel panel-default">
					<div class="panel-body">

							<div class="col-sm-12">
								<div class="row">
									<div class="col-sm-6 form-group">
																		<label>School Name<span class="text-danger">*</span></label>
										@Html.TextBoxFor(model => model.School_Name, new { @class = "form-control", placeholder="Enter School Name" })
																		@Html.ValidationMessageFor(model => model.School_Name, "", new { @class = "text-danger" })
									</div>
									<div class="col-sm-6 form-group">
										<label>10th YOP<span class="text-danger">*</span></label>
										@Html.TextBoxFor(model => model.ssc_Year_of_Pass_out, new { @class = "form-control", placeholder="Enter 10th passout Year" })
										@Html.ValidationMessageFor(model => model.ssc_Year_of_Pass_out, "", new { @class = "text-danger" })
									</div>
								</div>
								<div class="row">
									<div class="col-sm-6 form-group">
																		<label>10th Aggregate<span class="text-danger">*</span></label>
										@Html.TextBoxFor(model => model.Ssc_Aggregate, new { @class = "form-control", placeholder="Enter 10th Aggregate " })
																		@Html.ValidationMessageFor(model => model.Ssc_Aggregate, "", new { @class = "text-danger" })
									</div>

								</div>
							</div>

					</div>
				</div>

			</fieldset>
			<fieldset class="col-md-6">
				<legend>Intermediate </legend>
				<div class="panel panel-default">
					<div class="panel-body">


							<div class="col-sm-12">
								<div class="row">
									<div class="col-sm-6 form-group">
																		<label>Inter college Name<span class="text-danger">*</span></label>
										@Html.TextBoxFor(model => model.Junior_College_Name, new { @class = "form-control", placeholder="Enter Inter college Name" })
																		@Html.ValidationMessageFor(model => model.Junior_College_Name, "", new { @class = "text-danger" })
									</div>
									<div class="col-sm-6 form-group">
										<label>12th YOP<span class="text-danger">*</span></label>
										@Html.TextBoxFor(model => model.inter_Year_of_Pass_out, new { @class = "form-control", placeholder="Enter 12th Yop" })
																		@Html.ValidationMessageFor(model => model.inter_Year_of_Pass_out, "", new { @class = "text-danger" })
									</div>
								</div>
								<div class="row">
									<div class="col-sm-6 form-group">
																		<label>12th Aggregate<span class="text-danger">*</span> </label>
										@Html.TextBoxFor(model => model.inter_Aggregate, new { @class = "form-control", placeholder="Enter 12th Aggregate " })
																		@Html.ValidationMessageFor(model => model.inter_Aggregate, "", new { @class = "text-danger" })
									</div>

								</div>

							</div>

					</div>
				</div>
			</fieldset>
			<fieldset class="col-md-6">
				<legend>Engineering </legend>
				<div class="panel panel-default">
					<div class="panel-body">


							<div class="col-sm-12">
								<div class="row">
									<div class="col-sm-6 form-group">
																		<label>Eng college Name<span class="text-danger">*</span></label>
										@Html.TextBoxFor(model => model.Engineering_College_Name, new { @class = "form-control", placeholder="Enter Engineering college Name" })
																		@Html.ValidationMessageFor(model => model.Engineering_College_Name, "", new { @class = "text-danger" })
									</div>
									<div class="col-sm-6 form-group">
																		<label>Branch<span class="text-danger">*</span></label>
										@Html.TextBoxFor(model => model.Branch, new { @class = "form-control", placeholder="Enter Branch " })
										@Html.ValidationMessageFor(model => model.Branch, "", new { @class = "text-danger" })
									</div>
								</div>
								<div class="row">
									<div class="col-sm-6 form-group">
																		<label>YOP<span class="text-danger">*</span></label>
										@Html.TextBoxFor(model => model.Btech_Year_of_Pass_out, new { @class = "form-control", placeholder="Enter YOP " })
																		@Html.ValidationMessageFor(model => model.Btech_Year_of_Pass_out, "", new { @class = "text-danger" })
									</div>
									<div class="col-sm-6 form-group">
																		<label>Totalbacklogs<span class="text-danger">*</span></label>
										@Html.TextBoxFor(model => model.Total_backlogs, new { @class = "form-control", placeholder="Enter Total backlogs " })
																		@Html.ValidationMessageFor(model => model.Total_backlogs, "", new { @class = "text-danger" })
									</div>
								</div>
								<div class="row">
									<div class="col-sm-6 form-group">
																		<label>Graduation Aggregate<span class="text-danger">*</span></label>
										@Html.TextBoxFor(model => model.Graduation_Aggregate, new { @class = "form-control", placeholder="Enter Graduation Aggregate " })
																		@Html.ValidationMessageFor(model => model.Graduation_Aggregate, "", new { @class = "text-danger" })
									</div>
								</div>
							</div>

					</div>
				</div>

			</fieldset>
			<fieldset class="col-md-6">
				<legend>Family </legend>
				<div class="panel panel-default">
					<div class="panel-body">

							<div class="col-sm-12">
								<div class="row">
									<div class="col-sm-6 form-group">
																		<label>Fathersname<span class="text-danger">*</span></label>
										@Html.TextBoxFor(model => model.Fathers_name, new { @class = "form-control", placeholder="Enter Fathers name " })
										@Html.ValidationMessageFor(model => model.Fathers_name, "", new { @class = "text-danger" })
									</div>
									<div class="col-sm-6 form-group">
																		<label>Fathers Occupation<span class="text-danger">*</span> </label>
										@Html.TextBoxFor(model => model.Fathers_occupation, new { @class = "form-control", placeholder="Enter Fathers Occupation" })
																		@Html.ValidationMessageFor(model => model.Fathers_occupation, "", new { @class = "text-danger" })
									</div>
								</div>
								<div class="row">
									<div class="col-sm-6 form-group">
																		<label>Permanent address<span class="text-danger">*</span> </label>
										@Html.TextBoxFor(model => model.Permanent_address, new { @class = "form-control", placeholder="Enter Permanent address " })
										@Html.ValidationMessageFor(model => model.Permanent_address, "", new { @class = "text-danger" })
									</div>
									<div class="col-sm-6 form-group">
																		<label>Present address<span class="text-danger">*</span> </label>
										@Html.TextBoxFor(model => model.Present_address, new { @class = "form-control", placeholder="Enter present address " })
																		@Html.ValidationMessageFor(model => model.Present_address, "", new { @class = "text-danger" })
									</div>

								</div>
								<div class="row">
									<div class="col-sm-6 form-group">
																		<label>Fathers Mobile <span class="text-danger">*</span> </label>
										@Html.TextBoxFor(model => model.Fathers_Mobile_No, new { @class = "form-control", placeholder="Enter FathersMobile  " })
										@Html.ValidationMessageFor(model => model.Fathers_Mobile_No, "", new { @class = "text-danger" })
									</div>
									<div class="col-sm-6 form-group">
										<label>Mothers Name <span class="text-danger">*</span> </label>
										@Html.TextBoxFor(model => model.Mothers_Name, new { @class = "form-control", placeholder="Enter Mothers Name  " })
										@Html.ValidationMessageFor(model => model.Mothers_Name, "", new { @class = "text-danger" })
									</div>

								</div>
								<div class="row">
									<div class="col-sm-6 form-group">
										<label>Mothers Occupation<span class="text-danger">*</span>  </label>
										@Html.TextBoxFor(model => model.Mothers_Occupation, new { @class = "form-control", placeholder="Enter Mothers Occupation" })
				                     	@Html.ValidationMessageFor(model => model.Mothers_Occupation, "", new { @class = "text-danger" })
									</div>

								</div>
								<div>
														<label>Upload resume  </label><br>
                    <span>Select File:</span>

                    <input type="file" name="PostedFiles" multiple />
                </div>

							</div>

					</div>
				</div>

			</fieldset>

			<div class="cl-md-5">
				<input type="submit" value="submit" class="btn btn-primary float-end" onclick="confirm('Data Added Successfully')"></input>
				
			</div>
			<div class="clearfix"></div>
		</div>

	</div>
</div>
}

                </div>
            </div>
        </div>
    </section>
    <!-- End -->
</body>
</html>
<!-- Content Start -->